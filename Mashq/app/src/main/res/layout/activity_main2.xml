<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <ImageView
        android:src="@drawable/images1"
        android:scaleType="centerCrop"
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.25"/>
    <ImageView
        android:id="@+id/img2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/images2"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/img4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintEnd_toStartOf="@id/img3"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.5"/>
    <ImageView
        android:id="@+id/img3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/images3"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/img5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toEndOf="@id/img2"/>
    <ImageView
        android:id="@+id/img4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/image6"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/img6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img2"
        app:layout_constraintEnd_toStartOf="@id/img5"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.5"/>
    <ImageView
        android:id="@+id/img5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/image5"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img3"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintBottom_toTopOf="@id/img6"
        app:layout_constraintStart_toEndOf="@id/img4"/>
    <ImageView
        android:id="@+id/img6"
        android:layout_width="match_parent"
        android:src="@drawable/image4"
        android:scaleType="centerCrop"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/img4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.25"/>

</androidx.constraintlayout.widget.ConstraintLayout>